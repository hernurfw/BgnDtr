<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.naitogami.bangundatar.persegi.persegi">

    <TextView
        android:text="Luas Segitiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/txt_judul"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="t :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/alas"
        android:layout_alignStart="@+id/textViewAlas"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tinggi"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:hint="Masukan Tinggi Segitiga"
        android:textSize="24sp" />

    <TextView
        android:text="a :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAlas"
        android:layout_alignBaseline="@+id/alas"
        android:layout_alignBottom="@+id/alas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/alas"
        android:hint="Masukan Alas Segitiga"
        android:layout_below="@+id/txt_judul"
        android:layout_alignParentEnd="true"
        android:textSize="24sp" />

    <Button
        android:text="Hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHasil"
        android:layout_below="@+id/tinggi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:text="Luas Segitiga Adalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hasil"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/btnHasil"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

</RelativeLayout>